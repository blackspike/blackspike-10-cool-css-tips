---
import Layout from '../layouts/Layout.astro'
import SlideContent from "../components/SlideContent.astro"

import { getEntry } from 'astro:content'
const content = await getEntry('pages', 'index')

import { Image } from 'astro:assets';
import screen from '../assets/images/hero-image.png'
---

<Layout title={ content.data.title } description={ content.data.description }>

  <SlideContent
    title={ content.data.title }
    description={ content.data.description }
  >

  <Fragment slot="content">

    <Image
      src={ screen }
      alt=""
      class="absolute z-1 w-[780px] right-[40px] top-[20px] hover:z-10"
    />

  </Fragment>

  </SlideContent>

</Layout>
