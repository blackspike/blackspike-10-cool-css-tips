---
import Layout from '../layouts/Layout.astro'
import SlideContent from "../components/SlideContent.astro"

import { getEntry, render } from 'astro:content'
const content = await getEntry('pages', 'index')
const { Content } = await render(content)

import { Image } from 'astro:assets';
import screen from '../assets/images/hero-image.png'
---

<Layout title={ content.data.title } description={ content.data.description }>

  <SlideContent
    title={ content.data.title }
    description={ content.data.description }
  >

  <Fragment slot="content">

    <Image
      src={ screen }
      alt=""
      class="hover:z-10 absolute z-1 w-[1100px] right-[-350px] top-[100px] lg:w-[800px] lg:right-[-40px] lg:top-[20px]"
      style="animation-delay: 1s !important;"
    />

    <Content />
  </Fragment>

  </SlideContent>

</Layout>
